<div class="card mb-3" id="reviewcard">
	<% if @product.image.present? %>
		<%= image_tag @product.image,class: "card-img-top", height: 240%>
	<% else %>
		<%= image_tag "defult.png",class: "img-fluid rounded-start" %>
	<% end %>
	<div class="card-body">
		<h5 class="card-title"><%= @product.name %></h5>
		<p class="card-text"><%= @product.description %></p>
		<p class="card-text"><small class="text-muted">Reviews</small></p>
		<% @product.reviews.each do |review| %>
			<hr class="my-4">
			<div class="row" style="margin-top: 2px">
				<div class="col-1"><%= image_tag "defult.png", class: "pic rounded-circle",height: 20 %></div>
				<div class="col-9"><%= review.content %></div>
				<div class="col-2" style="font-size: small; margin-left: 43px"><%= current_account.firstname %></div>
			</div>
		<% end %>
	</div>
</div>