<%= form_with model: @review do |form| %>
	<div class="field">
		<%= form.label :content %>
		<%= form.rich_text_area :content %>
	</div>
	<div>
		<%= form.hidden_field :product_id, value:params[:product_id] %>
	</div>
	<div>
		<%= form.submit "Submit", class: "btn btn-primary btn-sm" %>
	</div>
<% end %>