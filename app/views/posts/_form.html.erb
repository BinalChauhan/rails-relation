<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :Title %></br>
    <%= form.text_field :title %>
  </div></br>
  <div>
    <%= form.label :Description %><br/>
    <%= form.text_field :description %>
  </div></br>
  <div>
    <%= form.label :Date %><br/>
    <%= form.date_field :date %>
  </div></br>
  <div>
    <%= form.label :Select_User %><br/>
    <%= form.collection_select :user_id, User.all, :id, :fname, prompt: true %>
  </div></br>
  <div>
    <%= form.label :Select_Company %><br/>
    <%= form.collection_select :company_id, Company.all, :id, :comapny_name, prompt: true %>
  </div></br>
  <div>
    <%= form.submit :Create ,class: 'btn btn-success' %>
  </div>
<% end %>
