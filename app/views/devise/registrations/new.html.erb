<div class="form-bg">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="form-container">
          <h3 class="title">Create Account</h3>
          <ul class="social-links">
            <li><a href=""><i class="fab fa-google"></i></a></li>
            <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
            <li><a href=""><i class="fab fa-twitter"></i></a></li>
          </ul>
          <span class="description">or use you email for registration:</span>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => { class: "form-horizontal" })do |f|  %>
              <%= render "devise/shared/error_messages",autocomplete: "email", resource: resource %>
            <div class="form-group">
              <%= f.text_field :firstname, autofocus: true, placeholder: "First name" , class: "form-control"%>
            </div>
            <div class="form-group">
              <%= f.text_field :lastname, autofocus: true, placeholder: "Last name" , class: "form-control"%>
            </div>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Email" , class: "form-control"%>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control", placeholder: "Confirm password"%>
              </div>
            <div class="form-group">
              <%= f.file_field :image, autocomplete: "image" ,class: "form-control", placeholder: "Confirm password"%>
            </div>
              <div class="form-group">
                <input type="checkbox" class="checkbox">
                <span class="check-label">I agree to the <a href="">Terms</a> and <a href="">Privacy Policy.</a></span>
              </div>
              <%= f.submit "Sign up",class: "btn signup"%>
              <%= render "devise/shared/links" %>
            <%end %>
        </div>
      </div>
    </div>
  </div>
</div>