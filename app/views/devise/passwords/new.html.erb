
<div class="form-bg">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="form-container">
          <h3 class="title">Forgot your password?</h3>
          <form class="form-horizontal">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :email,id: "lbl" %><br />
                <%=  f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control",placeholder: "Enter Email" %>
              </div>
              <%= f.submit "Reset Password",class: "btn btn-lg btn-block"%>
<!--              <div>-->
              <%#= render "devise/shared/links" %>
<!--              </div>-->
            <%end %>


          </form>
        </div>
      </div>
    </div>
  </div>
</div>



