<div class="form-bg">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="form-container">
          <h3 class="title">Login Account</h3>
          <ul class="social-links">
            <li><a href=""><i class="fab fa-google"></i></a></li>
            <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
            <li><a href=""><i class="fab fa-twitter"></i></a></li>
          </ul>
          <span class="description">or use you email for login:</span>
          <div class="form-horizontal">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder: "Enter Email" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "current-password",class: "form-control",placeholder: "Enter Password" %>
              </div>
              <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me, class: "checkbox" %>
                <span class="check-label"><%= f.label :remember_me %></span>
              </div>
                <% end %>
              <%= f.submit "Sign In",class: "btn signin"%>
              <%# end %>
              <%= render "devise/shared/links" %>
            <%end %>


          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .form-horizontal .btn.signin{
        color: #fff;
        background-color: #006699;
        font-size: 13px;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-transform: capitalize;
        width: 130px;
        padding: 11px;
        margin: 0 10px 10px 0;
        border: 2px solid #006699;
        border-radius: 15px;
        display: inline-block;
        transition: all 0.3s ease 0s;
    }
    .form-horizontal .btn.signup{
        color:#006699;
        background-color: #fff;
    }
    .form-horizontal .btn:hover,
    .form-horizontal .btn:focus{
        color: #006699;
        background-color: #fff;
        box-shadow: 0 0 5px#006699, 0 0 15px #006699 inset;
    }
    .form-horizontal .btn.signup:hover,
    .form-horizontal .btn.signup:focus{
        text-shadow: 3px 3px rgba(0,0,0,0.3);
        box-shadow: 0 0 5px#006699;
    }

</style>

